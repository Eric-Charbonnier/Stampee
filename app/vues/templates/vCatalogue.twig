	<div
		class="grid_section_wrapper conteneur">
		<!-- filtres -->

		<aside class="filtres__display">

			<section class="filtres">
				<div class="filtres__aside--titre">

					<form action="rechercherEnchere?entite=enchere&action=f" method="POST">

						<h4>
							Condition
						</h4>
					</div>
					<div>
						<input type="checkbox" name="inputCondition" value="parfaite">
						<label for="parfaite">Parfaite</label>
					</div>
					<div>
						<input type="checkbox" name="inputCondition" value="excellente">
						<label for="excellente">Excellente</label>
					</div>
					<div>
						<input type="checkbox" name="inputCondition" value="bonne">
						<label for="bonne">Bonne</label>
					</div>
					<div>
						<input type="checkbox" name="inputCondition" value="moyenne">
						<label for="moyenne">Moyenne</label>
					</div>
					<div>
						<input type="checkbox" name="inputCondition" value="mauvaise">
						<label for="mauvaise">Mauvaise</label>
					</div>
				</section>

				<section class="filtres">
					<div class="filtres__aside--titre">

						<form action="rechercherEnchere?entite=enchere&action=f" method="POST">

							<h4>
								Pays
							</h4>
						</div>
						<div>
							<label for="royaume-uni"><input type="checkbox" name="inputPays" id="royaume-uni" value="royaume-uni">
								Royaume-Uni</label>
						</div>
						<div>
							<label for="etats-unis"><input type="checkbox" name="inputPays" id="etats-unis" value="etats-unis">
								États-unis</label>
						</div>
						<div>
							<label for="canada"><input type="checkbox" name="inputPays" id="canada" value="canada">
								Canada</label>
						</div>
						<div>
							<label for="australie"><input type="checkbox" name="inputPays" id="australie" value="australie">
								Australie</label>
						</div>
						<div>
							<label for="chine"><input type="checkbox" name="inputPays" id="chine" value="chine">
								Chine</label>
						</div>
						<div>
							<label for="france"><input type="checkbox" name="inputPays" id="france" value="france">
								France</label>
						</div>
						<div>
							<label for="espagne"><input type="checkbox" name="inputPays" id="espagne" value="espagne">
								Espagne</label>
						</div>
					</section>

					<section class="filtres">
						<div class="filtres__aside--titre">
							<h4>
								Prix
							</h4>
						</div>
						<div>
							<input type="checkbox" name="inputPrix" value="inputPrixASC">
							<label for="prixASC">Ascendant</label>
						</div>
						<div>
							<input type="checkbox" name="inputPrix" value="inputPrixDESC">
							<label for="prixDESC">Descendant</label>
						</div>
						{# $
																	<input class="filtres__prix--input" type="text" name="prix" value="">
																	– $
																	<input class="filtres__prix--input" type="text" name="prix" value=""> #}
					</section>

					{# <section class="filtres retirer-850px">
